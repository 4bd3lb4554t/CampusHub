

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../db/dev.sqlite"
}


model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  email    String @unique
  password String

  @@map("users")

}



model Profile {
  user_id  Int    @unique
  username String @unique
  fullName String
  img      String
  bio      String
  location String
  phone    String @unique

  @@map("profiles")
}

