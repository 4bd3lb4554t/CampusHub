

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../db/dev.sqlite"
}


model User {
  id            Int    @id @default(autoincrement())
  name          String @unique
  email         String @unique
  auth_provider String @default("local")
  ver_code      Int     @default(999)
  is_verified   Boolean @default(false)  
  password      String  

  @@map("users")

}



model Profile {
  user_id  Int    @unique
  username String @unique
  avatart      String
  bio      String
  location String
  phone    String @unique

  @@map("profiles")
}

